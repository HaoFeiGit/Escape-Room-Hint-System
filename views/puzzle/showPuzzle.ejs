<% layout('layout/boilerplate') %>
    <div class="container mt-5">
        <div class="d-flex justify-content-center">
            <div class="card" style="width: 35rem;">
                <h1>
                    <%= theme.title %> Puzzle
                </h1>
                <img src="<%= puzzle.puzzleImage.url %> " class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Here is your hint</h5>
                    <p class="card-text">
                        <%= puzzle.hint %>
                    </p>
                    <a href="/themes/<%= theme._id %>  " class="btn btn-primary">Go Back</a>
                    <a href="/themes/<%= theme._id %>/p/<%= puzzle._id %>/edit " class="btn btn-warning ms-3">Edit</a>
                    <form action="/themes/<%= theme._id %>/p/<%= puzzle._id %>?_method=DELETE" method="POST"
                        class="d-inline ms-3">
                        <button class="btn btn-danger"> Delete </button>
                    </form>
                </div>
            </div>
        </div>
    </div>