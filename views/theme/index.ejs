<% layout('layout/boilerplate') %>
    <div class="d-flex justify-content-center">
        <h1>All Themes</h1>
    </div>
    <div class="container">

        <% for (let i of themes) { %>
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-3 col-sm-5">
                        <img class="img-fluid w-100" src="<%= i.themeImage.url %>" alt="...">
                    </div>
                    <div class="col-md-9 col-sm-7">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= i.title %>
                            </h5>
                            <p class="card-text">
                                <%= i.themeDescription %>
                            </p>
                            <p class="card-text"><small class="text-muted">
                                    Company: <%= i.company %>
                                </small></p>
                            <p class="card-text"><small class="text-muted">
                                    Level of Difficulty: <%= i.difficulty %>
                                </small></p>
                            <a class="btn btn-success mt-3" href="/themes/<%= i._id %> ">
                                Open <%= i.title %> Hint System
                            </a>
                            <a class="btn btn-info mt-3" href="/themes/<%= i._id %>/edit ">
                                Edit <%= i.title %> Hint System
                            </a>
                            <form action="/themes/<%= i._id %>?_method=DELETE " method="POST" class="d-inline">
                                <button class="btn btn-danger mt-3">DELETE</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>
